    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build",
            "type": "php",
            "request": "launch",
            "noDebug": false,
            "program": "${workspaceRoot}/buildscript/Build.php",
            "cwd": "${workspaceRoot}/buildscript"
        },
        {
            "name": "Xdebug remote",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "stopOnEntry": false,
            "exclude": [
                "**/vendor/**/*.php",
                "**/autoload.php"
            ]
        }
    ]
}